{
  "manifest_version": 3,
  "name": "zoom-tab-remover",
  "description": "Automatically close the Zoom tabs left open by the Zoom meeting",
  "version": "1.0.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "permissions": [
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "https://*.zoom.us/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "short_name": "zoom-tab-remover"
}